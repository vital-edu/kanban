<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :priority %><br>
    <%= f.text_field :priority %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.hidden_field :project_id %>
    <%= f.hidden_field :stage_id %>
  </div>
  <div class="modal-footer">
    <div class="col right">
      <%= f.button :button, class: 'btn waves-effect waves-light' do %>
        <i class="material-icons right">send</i>
        Salvar tarefa
      <% end %>
    </div>
    <div class="col right">
      <a href="#!" class="modal-action modal-close waves-effect waves-light btn red accent-2"> Cancelar </a>
    </div>
  </div>
<% end %>
