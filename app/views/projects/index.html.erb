<div class="row center-align">
  <div class="center-align">
    <h3>Projetos</h3>
  </div>
</div>
<div class="row">
<% @projects.each do |p| %>
    <div class="col s12 m12 l4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="<%=p.image.url%>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%=p.name%><i class="material-icons right">more_vert</i></span>
          <div class="progress">
            <div class="determinate" style="width: <%= p.progress %>%"></div>
          </div>
          <p>
            <%= link_to p, class: 'btn-floating btn-large waves-effect waves-light blue' do %>
              <i class="material-icons">dashboard</i>
            <% end %>
            <%= link_to edit_project_path(p), class: 'btn-floating btn-large waves-effect waves-light blue' do %>
              <i class="material-icons">description</i>
            <% end %>
            <%= link_to p, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este projeto?' }, class: 'btn-floating btn-large waves-effect waves-light red right' do %>
              <i class="material-icons">delete</i>
            <% end %>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%=p.name%><i class="material-icons right">close</i></span>
          <span>
          <%= p.description %>
          </span>
          <table>
            <thead>
              <tr>
                <th>Data de inicial</th>
                <th>Data final</th>
                <th colspan="1"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= p.start_date.strftime("%d/%m/%Y") %></td>
                <td><%= p.end_date.strftime("%d/%m/%Y") %></td>
              </tr>
            </tbody>
            <thead>
              <tr>
                <th>Progresso do Projeto</th>
                <th colspan="1"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th colspan="3">
                  <div class="progress">
                    <div class="determinate" style="width: <%= p.progress %>%"></div>
                  </div>
                </th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
<% end %>
<div class="col right">
  <%= link_to new_project_path, class: 'btn-floating btn-large waves-effect waves-light green right' do %>
    <i class="material-icons">add</i>
  <% end %>
</div>
  </div>
