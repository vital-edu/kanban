<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Progress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <%= image_tag project.image.url(:medium) %>
        <td><%= project.image.url %></td>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.progress %></td>
        <td><%= link_to 'Exibir', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Excluir', project, method: :delete, data: { confirm: 'Tem certeza que deseja efetuar essa operação?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

