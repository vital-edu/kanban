<div class="row">
  <% stages(@project).each do |s| %>
    <div class="col s12 m3">
      <div class="card-panel teal">
        <span class="card-title white-text"><%= s.name %></span>
        <% stage_tasks(@project, s).each do |t| %>
          <div class="row">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><%= t.name %></span>
                <p><%= t.description %></p>
              </div>
              <div class="card-action">
                  <%= link_to t, class: 'btn waves-effect waves-light' do %>
                    <i class="material-icons">info_outline</i>
                  <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="card-action">
          <center>
            <%= link_to new_task_path(project_id: @project.id, stage_id: s), class: 'btn-floating btn-large waves-effect waves-light red' do %>
              <i class="material-icons">add</i>
            <% end %>
          </center>
        </div>
      </div>
    </div>
  <% end %>
  <div class="col s12 m3">
    <div class="card-panel teal">
      <%= link_to 'Nova lista', new_stage_path(project_id: @project.id) %>
    </div>
  </div>
</div>

<%= link_to 'Editar projeto', edit_project_path(@project) %> |
<%= link_to 'Voltar', projects_path %>
